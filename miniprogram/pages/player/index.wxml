<view class="all">
    <view class="player_card">
        <view class="title">Got Next球员卡</view>
        <view class="card">
            <view class="top_information">
                <view class="left">
                    <image src="../../img/player_card/charlotte.png"></image>
                </view>
                <view class="middle">
                    <image src="../../img/player_card/melo.png" mode="aspectFill"></image>
                </view>
                <view class="right">
                    <view class="name">张书晗</view>
                    <view class="detail">185cm/控球后卫/19岁/110kg</view>
                    <view class="rewards">
                        <text class="event iconfont icon-gou_wu_che2"> 0</text>
                        <text class="rings iconfont icon-gou_wu_che2"> 0</text>
                    </view>
                </view>
            </view>
            <view class="main_card">
                <view class = "card">
                    <view class="career_stats">
                        <view class="title">生涯数据</view>
                        <view class="stat_line">
                            <view class='stat_column'>
                                <view class="wrapper">
                                    <view class="number">20.5</view>
