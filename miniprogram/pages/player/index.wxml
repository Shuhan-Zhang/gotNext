                        </view>
                    </view>
                    <view class="event_reward">
                        <view class="title">
                            历史活动奖项
                        </view>
                        <view class="wrapper">
                            <view class="reward_column">
                                <view class="personal wrapper2">
                                    <text class="iconfont icon-gou_wu_che2"> 0</text>
                                </view>
                            </view>
                            <view class="reward_column">
                                <view class="team wrapper2">
                                    <text class="iconfont icon-gou_wu_che2"> 0</text>
                                </view>
                            </view>
                            <view class="reward_column">
                                <view class="challenge wrapper2">
                                    <text class="iconfont icon-gou_wu_che2"> 0</text>
                                </view>
                            </view>
