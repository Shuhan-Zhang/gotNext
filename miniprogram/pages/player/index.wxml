                        </view>
                    </view>
                    <view class="history_games">
                        <view class="title">历史比赛数据</view>
                        <view class="history_game_row">
                            <view class="left">
                                <view class="wrapper">
                                    <image src="../../img/player_card/hawks.png"></image>
                                    <text>V.S</text>
                                    <image src="../../img/player_card/warriors.png"></image>
                                </view>
                            </view>
