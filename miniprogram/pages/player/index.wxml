            <view class="caption"><view class="wrapper">功能建议</view></view>
            <view class="icon">
                <image src="../../img/player/advice.png" mode="aspectFill"></image>
            </view>
        </view>
        <view class="setting_row">
            <view class="caption"><view class="wrapper">开发者信息</view></view>
            <view class="icon">
                <image src="../../img/player/developer.png" mode="aspectFill"></image>
            </view>
        </view>
        <view class="setting_row">
            <view class="caption"><view class="wrapper">打赏</view></view>
            <view class="icon">
                <image class="tip" src="../../img/player/tip.png" mode="aspectFill"></image>
            </view>
        </view>
    </view>
