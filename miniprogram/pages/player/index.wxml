                                </view>
                            </view>
                            <view class="stats_column">
                                <view class="wrapper">
                                    <view class="number">0</view>
                                    <view class="description">MVP</view>
                                </view>
                            </view>
                            <view class="stats_column">
                                <view class="wrapper">
                                    <view class="number">0</view>
