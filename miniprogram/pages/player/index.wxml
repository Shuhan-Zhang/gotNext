                                    <view class="wrapper">
                                        <view class="number">11</view>
                                        <view class="description">篮板</view>
                                    </view>
                                </view>
                                <view class="stat">
                                    <view class="wrapper">
                                        <view class="number">14</view>
                                        <view class="description">助攻</view>
                                    </view>
                                </view>
                            </view>
                            <view class="right">
                                <view class="wrapper">
                                <view class="result">W</view>
                            </view>
                            </view>
                        </view>
                    </view>
                    <view class="total_reward">
                        <view class="title">历史联盟荣誉</view>
                        <view class="reward_row">
                            <view class="stats_column">
                                <view class="wrapper">
                                    <view class="number">0</view>
