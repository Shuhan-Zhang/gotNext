view.all view.top_image image {
  width: 100%;
}
view.all .participation {
  text-align: right;
  z-index: 10;
  margin-top: -35px;
  font-family: PingFangSC-Semibold;
  font-size: 15px;
  color: #FFFFFF;
  margin-right: 5px;
}
view.all view.main_card {
  height: calc(100vh);
  /*50+60*/
  display: flex;
  flex-flow: column;
  position: relative;
  background-image: linear-gradient(180deg, #CE1241 0%, #360000 99%);
  box-shadow: 0 -5px 5px 0 rgba(0, 0, 0, 0.5);
  border-radius: 10px 10px 0px 0px;
  margin-top: 5x;
  z-index: 1000;
}
view.all view.main_card view.card {
  width: 93%;
  margin: 0 auto;
}
view.all view.main_card view.card view.title {
  padding-top: 10px;
  font-family: PingFangSC-Semibold;
  font-size: 40px;
  color: #FFFFFF;
  text-align: left;
}
view.all view.main_card view.card view.description {
  margin-top: 10px;
  margin-bottom: 30px;
  font-family: PingFangSC-Semibold;
  font-size: 15px;
  color: #FFFFFF;
}
view.all view.main_card view.card view.price_money {
  font-family: PingFangSC-Semibold;
  font-size: 25px;
  color: #3DE300;
}
view.all view.main_card view.card view.time.iconfont.icon-shijian {
  margin-top: 10px;
  font-family: PingFangSC-Regular;
  font-size: 18px;
  color: #FFFFFF;
}
view.all view.main_card view.card view.location.iconfont.icon-map-thumbtack {
  margin-top: 10px;
  margin-bottom: 10px;
  font-family: PingFangSC-Regular;
  font-size: 18px;
  color: #FFFFFF;
}
view.all view.main_card view.card map {
  width: 100%;
  border: 2px solid #FFE9DE;
  height: 300px;
  border-radius: 8px;
}
view.all view.main_card button.join_button {
  text-align: center;
  background: #FF0000;
  font-family: PingFangSC-Semibold;
  font-size: 25px;
  color: #FFFFFF;
  height: 8%;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: fixed;
  bottom: 0;
  border-radius: 8px 8px 0px 0px;
}
